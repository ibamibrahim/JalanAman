<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@color/not_that_white"
              android:orientation="vertical">

    <TextView
        style="@style/title_with_label"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/color_safe"
        android:text="Tambah lokasi"
        android:textAlignment="textStart"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="@dimen/standard_space">

        <TextView
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/small_space"
            android:text="Tipe"/>

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/radio_group">

            <RadioButton
                android:id="@+id/radio_add_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lokasi"/>

            <RadioButton
                android:id="@+id/radio_add_route"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/small_space"
                android:text="Rute perjalanan"/>


        </RadioGroup>

        <TextView
            style="@style/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_space"
            android:text="Nama lokasi/rute"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/text_add_name"
            android:layout_marginBottom="@dimen/small_space"
            android:text="Kantor"/>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_space"
            android:text="Pilih lokasi/rute"/>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/small_space">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/small_space">

                    <include layout="@layout/item_select_place"
                        android:id="@+id/item_select_place"/>
                    <include layout="@layout/item_select_route"
                        android:id="@+id/item_select_route"/>

            </LinearLayout>

        </android.support.v7.widget.CardView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="16dp"
                android:background="@drawable/button_red"
                android:text="Cancel"
                android:textColor="#fff"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_green"
                android:text="Save"
                android:textColor="#fff"/>
        </LinearLayout>

    </LinearLayout>

</LinearLayout>