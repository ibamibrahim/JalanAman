<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>


    <style name="MapTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="toolbarStyle">@style/actionbar</item>
    </style>

    <style name="actionbar">
        <item name="android:background">@color/red</item>
        <item name="android:textColor">#fff</item>
        <item name="android:text">Kebakaran di RSUD Tangerang</item>
    </style>

    <style name="title">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="content" parent="title">
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="title_with_label">
        <item name="android:padding">@dimen/small_space</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAlignment">center</item>
        <item name="android:textColor">#fff</item>
    </style>

    <style name="title_with_label.small" parent="title_with_label">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="poster_recent_danger">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">start</item>
        <item name="android:paddingBottom">@dimen/extra_small_space</item>
        <item name="android:paddingRight">@dimen/small_space</item>
        <item name="android:paddingTop">@dimen/extra_small_space</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="poster_jalanAman" parent="poster_recent_danger">
        <item name="android:paddingLeft">@dimen/small_space</item>
        <item name="android:background">@color/color_safe</item>
        <item name="android:textStyle">bold</item>
        <item name="android:text">\@JalanAman</item>
        <item name="android:textColor">#fff</item>
    </style>

</resources>
