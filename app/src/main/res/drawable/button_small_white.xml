<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">
        <shape>
            <solid
                android:color="@color/colorPrimaryLight"
                />
            <stroke
                android:width="2dp"
                android:color="#fff"
                />
            <corners
                android:radius="18dp"
                />
        </shape>
    </item>

    <item android:state_focused="true">
        <shape>
            <solid
                android:color="#69f0ae"
                />
            <stroke
                android:width="2dp"
                android:color="#fff"
                />
            <corners
                android:radius="18dp"
                />
        </shape>
    </item>

    <item android:state_enabled="false">
        <shape>
            <solid
                android:color="#758c8d"
                />
            <stroke
                android:width="2dp"
                android:color="#fff"
                />
            <corners
                android:radius="18dp"
                />
        </shape>
    </item>

    <item>
        <shape>
            <solid
                android:color="#00ffffff"
                />
            <stroke
                android:width="2dp"
                android:color="#fff"
                />
            <corners
                android:radius="18dp"
                />
        </shape>
    </item>
</selector>